<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.MainMenuController">
    <BorderPane fx:id="mainContainer">
        <top>
            <HBox style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-width: 0 0 1 0; -fx-border-color: #e0e0e0;">
                <Button fx:id="menuButton" onAction="#toggleMenu" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 18px; -fx-cursor: hand;" text="☰">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </top>
    </BorderPane>

    <VBox fx:id="drawer" managed="false" maxWidth="200" prefWidth="200" spacing="0" style="-fx-background-color: #f5f5f5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 3, 0);" translateX="-200" StackPane.alignment="CENTER_LEFT">
        <HBox style="-fx-background-color: #e8e8e8; -fx-padding: 10 15; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" HBox.hgrow="ALWAYS">
            <Label style="-fx-text-fill: #333; -fx-font-size: 18px; -fx-font-weight: bold;" text="Меню" HBox.hgrow="ALWAYS"/>
            <Button onAction="#toggleMenu" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 18px; -fx-cursor: hand;" text="←"/>
        </HBox>
        
        <Button onAction="#onCalculationModuleClick" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-cursor: hand; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" text="Расчёт стипендий"/>
        
        <Button onAction="#onPayrollModuleClick" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-cursor: hand; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" text="Ведомости"/>
        
        <Button onAction="#onStudentsClick" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-cursor: hand; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" text="Студенты"/>
        
        <Button onAction="#onGroupsClick" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-cursor: hand; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" text="Группы"/>
        
        <Button onAction="#onScholarshipTypesClick" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-cursor: hand; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" text="Типы стипендий"/>
        
        <Button onAction="#onGroundsClick" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-cursor: hand; -fx-border-width: 0 0 1 0; -fx-border-color: #d0d0d0;" text="Основания"/>
    </VBox>
</StackPane>
