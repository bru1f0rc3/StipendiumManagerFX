<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.MainMenuController">
    
    <!-- Левая панель навигации -->
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Меню"/>
            
            <Button onAction="#onCalculationModuleClick" prefWidth="200.0" text="Расчёт стипендий">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
            
            <Button onAction="#onPayrollModuleClick" prefWidth="200.0" text="Ведомости">
                <VBox.margin>
                    <Insets top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    
    <!-- Центральная область -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Учёт стипендий и соцподдержки студентов"/>
            <Label text="Выберите раздел в меню слева"/>
        </VBox>
    </center>
    
</BorderPane>
