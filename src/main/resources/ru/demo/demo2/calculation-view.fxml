<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.CalculationController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
    
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Расчёт стипендий"/>
    
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        
        <Label text="Выберите месяц:"/>
        <DatePicker fx:id="monthPicker" prefWidth="150.0"/>
        <Button fx:id="calculateButton" onAction="#onCalculateClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Выполнить расчёт"/>
        <Button onAction="#onRefreshClick" text="Обновить"/>
    </HBox>
    
    <Label fx:id="resultLabel" style="-fx-font-size: 12px;">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </Label>
    
    <TableView fx:id="accrualsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
            <TableColumn fx:id="studentColumn" prefWidth="200.0" text="ФИО студента"/>
            <TableColumn fx:id="typeColumn" prefWidth="180.0" text="Тип стипендии"/>
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Сумма"/>
            <TableColumn fx:id="monthColumn" prefWidth="100.0" text="Месяц"/>
            <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Статус"/>
        </columns>
    </TableView>
</VBox>
