<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Set URL -->
        <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres1</property>
        <!-- Set User Name -->
        <property name = "hibernate.connection.username">postgres</property>
        <!-- Set Password -->
        <property name = "hibernate.connection.password">123123</property>
        <!-- Set Driver Name -->
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.show_sql">true</property>
        <!-- Optional: Auto-generate schema -->
        <!-- <property name = "hibernate.hbm2ddl.auto">create</property> -->
        <mapping class="ru.demo.demo2.model.StudentGroup" />
        <mapping class="ru.demo.demo2.model.Student" />
        <mapping class="ru.demo.demo2.model.ScholarshipType" />
        <mapping class="ru.demo.demo2.model.Ground" />
        <mapping class="ru.demo.demo2.model.Payroll" />
        <mapping class="ru.demo.demo2.model.Accrual" />
        <mapping class="ru.demo.demo2.model.Status" />
    </session-factory>
</hibernate-configuration>